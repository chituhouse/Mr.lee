# ============================================
# 老李选题系统 环境变量
# ============================================

# ── 飞书应用 ──
FEISHU_APP_ID=your_app_id
FEISHU_APP_SECRET=your_app_secret

# ── System A: 飞书机器人 (Claude Agent SDK) ──
ANTHROPIC_API_KEY=your_anthropic_api_key
CLAUDE_MODEL=claude-opus-4-5-20251101

# MCP Server 路径（可选，默认自动检测）
# MCP_NODE_PATH=/home/linuxbrew/.linuxbrew/bin/node
# MCP_BITABLE_PATH=./src/mcp-bitable.mjs

# ── System B: 选题推荐引擎 (Claude API) ──
ANTHROPIC_AUTH_TOKEN=your_proxy_api_key
ANTHROPIC_BASE_URL=https://aicoding.api.zeroclover.io
RECOMMEND_MODEL=claude-sonnet-4-5-20250929

# ── 飞书多维表格 ──
BITABLE_APP_TOKEN=your_bitable_app_token

# 各平台热搜表 ID
WEIBO_TABLE_ID=tblXXX
DOUYIN_TABLE_ID=tblXXX
TOUTIAO_TABLE_ID=tblXXX
ZHIHU_TABLE_ID=tblXXX
BILIBILI_TABLE_ID=tblXXX

# 选题池表 ID
TOPIC_POOL_TABLE_ID=tblXXX

# Prompt 配置表（在 prompt-loader.js 中使用）
# 当前硬编码在代码中：
# PROMPT_APP_TOKEN=HkTMbwNHqavfD6suRb0c8tNvn1f
# PROMPT_TABLE_ID=tblTbRhXAbaTsb0k

# ── 自主构建任务 ──
TASK_DOMAIN=your-domain.com
TASK_MAX_BUDGET_USD=2.0
